<html>
	<head>
		<title>Wellness Tracker</title>
		<meta charset="utf-8">
		<script type="text/javascript" src="https://code.jquery.com/jquery-1.7.1.min.js"></script>
		<script src="js/bootstrap.js"></script>

		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link href="/css/bootstrap.min.css" rel="stylesheet">
		<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
		<link href="/css/bootstrap.css" rel="stylesheet">

		<script src="/js/bar.js"></script>
		<script src="routes/addRecords.js"></script>
		<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet"/>
	</head>

	<body>
		<div id="main" class="jumbotron">
			<div class="navbar navbar-inverse navbar-fixed-top">
				<div class="container">
					<div class="navbar-header">
			<button class="navbar-toggle" data-toggle="collapse" data-target="#sidebar">
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span></button>
			<div id="sidebar" class="collapse navbar-collapse">
				<ul class="nav navbar-nav navbar-left">
					<li><a class="selected" href="/home">Home</a>
					</li>
					<li><a href="record">Record</a>
						</li>
					<li><a href="forum">Forum</a>
						</li>
					<li><a href="profile">Profile</a>
						</li>
					<li><a href="help">Help</a>
						</li>
					<li><button type="button" id="logout" class="btn btn-danger">Log Out</button>
						</li>
					</ul>
			</div>
		</div>
	</div>
	</div>

	    {{#each data}}
	    <div>
	    	<img class="profile-pic" src="images/default_profile_picture.JPG" width = "200" height = "200"alt="Profile Picture">
			<h3 class="name">{{name}}</h3>
			<p class="age">Age: {{age}}</p>
			<p class="location"> Location: {{city}}, {{state}}</p>
		</div>
		{{/each}}

		
		{{#each records}}
		<button id="postButton">
		<div class="recents">
			<h4>Recent Records</h4>
			<p class="record_date">Date: {{date}}</p>
			<p class="record_title">Title: {{title}}</p>
			<p class="record_subject">Subject: {{subject}}</p>
			<p class="record_hours">Hours of Sleep: {{input}}</p>
		</div>
	</button>
		{{/each}}
		

		</div>


	</body>
</html>
